            android:exported="true">
        </activity>
        <activity android:name=".ui.activity.RecyclerUserListView"
            android:exported="true">
        </activity>
        <activity android:name=".ui.activity.LoginActivity"
            android:exported="true">
        </activity>
        <activity android:name=".ui.activity.ProductConfirmationActivity"
            android:exported="true">
        </activity>
        <activity android:name=".ui.activity.UserAddFormActivity"
            android:exported="true">
        </activity>
        <activity
